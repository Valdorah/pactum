{% extends 'base.html.twig' %}

{% block title %}Log in
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('log') }}
{% endblock %}

{% block body %}
	<form class="log-form uk-card uk-card-default" method="post">
		<fieldset class="uk-fieldset">
			<legend class="log-form-legend uk-legend">Log in</legend>
			{% if error %}
				<div class="uk-margin">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="uk-margin">
					You are logged in as
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			{# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1> #}
			{# <label for="inputEmail">Email</label> #}
			<div class="uk-margin">
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="uk-input" placeholder="email" required autofocus>
			</div>
			{# <label for="inputPassword">Password</label> #}
			<div class="uk-margin">
				<input type="password" name="password" id="inputPassword" class="uk-input" placeholder="password" required>
			</div>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
																        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																        See https://symfony.com/doc/current/security/remember_me.html
																
																        <div class="checkbox mb-3">
																            <label>
																                <input type="checkbox" name="_remember_me"> Remember me
																            </label>
																        </div>
																    #}

			<div class="uk-margin">
				<p class="log-form-advice">Don't have any account ? <a href="{{ path('app_register') }}">Create one now</a></p>
				<p class="log-form-advice"><a href="{{ path('app_forgot_password_request') }}">I forgot my password !</a></p>
			</div>

			<button class="uk-button uk-button-primary log-form-submit" type="submit">
				Sign in
			</button>

		</fieldset>
	</form>
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('log') }}
{% endblock %}
